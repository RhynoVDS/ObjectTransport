<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RestoreProjectStyle>PackageReference</RestoreProjectStyle>
    <TargetFramework>netstandard1.4</TargetFramework>
    <RootNamespace>OTransport</RootNamespace>
    <PackageId>ObjectTransport</PackageId>
    <PackageVersion>1.0.2</PackageVersion>
    <Authors>Rhyno van der Sluijs</Authors>
    <Description>A simple library that allows you to send and receive Objects over TCP</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>Added an OnTimeOut function which allows you to specify a function/lambda to execute when a send/response times out.</PackageReleaseNotes>
    <Copyright></Copyright>
    <PackageTags>TCP Server Object networking</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
    <PackageReference Include="System.Threading.Thread" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="LiteNetLibStandard">
      <HintPath>Reference\LiteNetLibStandard.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
